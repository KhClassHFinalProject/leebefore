<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ju.booking">
	<insert id="bigINSsrBook" parameterType="ju.dto.StudyRoomDTO">
		INSERT INTO
			studyroom
		VALUES(
			#{sr_idx},
			#{sr_roomno},
			'testmj',
			sysdate,
			#{sr_resdate},
			#{sr_time},
			''
		)
	</insert>
	<select id="bigSELsrCheck" parameterType="ju.dto.StudyRoomDTO" resultType="ju.dto.StudyRoomDTO">
		SELECT *
		FROM studyroom
		WHERE sr_resdate = '${sr_resdate}'
	</select>
	<delete id="bigDELsrCancel" parameterType="java.util.Map">
		DELETE FROM studyroom
		WHERE sr_roomno = ${sr_roomno}
		AND sr_time = ${sr_time}
	</delete>
	<select id="bigSELsrUserCheck" parameterType="java.util.Map" resultType="String">
		SELECT mem_idx
		FROM studyroom
		WHERE sr_roomno = ${sr_roomno}
		AND sr_time = ${sr_time}
		AND sr_resdate = '${sr_resdate}'
	</select>
	<insert id="bigINSadminRoomDisbled" parameterType="ju.dto.StudyRoomDTO">
		INSERT INTO
			studyroom
		VALUES(
			#{sr_idx},
			#{sr_roomno},
			'admin',
			sysdate,
			#{sr_resdate},
			#{sr_time},
			''
		)
	</insert>
	<select id="bigSELadminRoomInfo" parameterType="java.util.Map" resultType="ju.dto.StudyRoomDTO">
		SELECT *
		FROM studyroom
		WHERE sr_roomno = ${sr_roomno}
		AND sr_time = ${sr_time}
		AND sr_resdate = '${sr_resdate}'
	</select>
</mapper>